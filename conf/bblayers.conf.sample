# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
    /${HOME}/poky-langdale/meta \
    /${HOME}/poky-langdale/meta-poky \
    /${HOME}/poky-langdale/meta-openembedded/meta-oe \
    /${HOME}/poky-langdale/meta-openembedded/meta-multimedia \
    /${HOME}/poky-langdale/meta-openembedded/meta-networking \
    /${HOME}/poky-langdale/meta-openembedded/meta-perl \
    /${HOME}/poky-langdale/meta-openembedded/meta-python \
    /${HOME}/poky-langdale/meta-raspberrypi \
    /${HOME}/poky-langdale/meta-security \
    /${HOME}/rpi/meta-rpi \
"
